

<div class="container">
  <div class="row">
    <div class="col-lg-6 landing-left">

      <%= render "devise/shared/dummy_phone" %>

    </div>
    <div class="col-lg-6 landing-right text-center d-flex align-items-center">
      <div>
        <div class="form-login box">
          <h3 class="core-sprite brand-name-img"> </h3>
          <h5 class="light-color"><strong>Sign up to see photos and videos from your friends.</strong></h5>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Your name", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
            </div>

            <div class="form-group">

              <%= f.password_field :password, autocomplete: "off", autofocus: true, placeholder: "Password", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "off", autofocus: true, placeholder: "Password confirmation", class: "form-control" %>
            </div>

            <div class="actions">
              <%= f.submit "Sign up", class: "btn btn-primary" %>
            </div>

            <br>
            <p class="light-color">By signing up, you agree to our <br>
              <strong>Term &amp; Privacy Policy.</strong></p>
          <% end %>
        </div>
        <div class="reditect-links box">
          <%= render "devise/shared/links" %>
        </div>

      </div>





    </div>

  </div>

</div>





